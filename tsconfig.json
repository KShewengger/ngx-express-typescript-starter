{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "jasmine"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app/config": ["config"],
      "@app/controllers": ["controllers"],
      "@app/enums": ["shared/enums"],
      "@app/interfaces": ["shared/interfaces"],
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules/*"
  ]
}